# Copy this file to .env and fill in your values
# .env is gitignored — never commit real secrets

INFLUXDB_ADMIN_USERNAME=admin
INFLUXDB_ADMIN_PASSWORD=changeme_strong_password
INFLUXDB_ADMIN_TOKEN=changeme_32char_random_token_here
INFLUXDB_ORG=homelab
INFLUXDB_BUCKET=powermon

GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=changeme_grafana_password

# Electricity cost used in the Grafana cost panel (currency per kWh)
ELECTRICITY_PRICE_KWH=0.12

# SNMP community string for UniFi device polling (used with agents/unifi/add-unifi.sh)
SNMP_COMMUNITY=public

INFLUXDB_PORT=8086
GRAFANA_PORT=3000

# Cloudflare Tunnel token — from Zero Trust dashboard → Networks → Tunnels
# Service URL when configuring the tunnel hostname: http://nginx:80
CLOUDFLARE_TUNNEL_TOKEN=

# ---------------------------------------------------------------------------
# Finance collector (agents/finance/)
# ---------------------------------------------------------------------------

# --- Schwab ---
# Create app at developer.schwab.com; run agents/finance/schwab_setup.py once,
# then copy the generated token to server/finance-secrets/schwab_token.json
SCHWAB_ENABLED=false
SCHWAB_CLIENT_ID=
SCHWAB_CLIENT_SECRET=

# --- Robinhood ---
ROBINHOOD_ENABLED=false
ROBINHOOD_USERNAME=
ROBINHOOD_PASSWORD=
# Base32 TOTP secret from Robinhood 2FA setup (leave blank to skip MFA)
ROBINHOOD_TOTP_SECRET=

# --- Plaid ---
# Create app at dashboard.plaid.com; run agents/finance/plaid_setup.py once per institution
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=production
# Add one entry per linked institution (generated by plaid_setup.py):
# PLAID_ACCESS_TOKEN_1=access-production-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# PLAID_INSTITUTION_1=chase
# PLAID_ACCESS_TOKEN_2=access-production-yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy
# PLAID_INSTITUTION_2=vanguard
