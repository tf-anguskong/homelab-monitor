# InfluxDB connection (same instance as power monitoring)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=homelab
INFLUXDB_BUCKET=powermon

# --- Schwab ---
# Create an app at developer.schwab.com and get these credentials
SCHWAB_CLIENT_ID=
SCHWAB_CLIENT_SECRET=
# Path where schwab_setup.py will save the OAuth token file
SCHWAB_TOKEN_FILE=/etc/finance-agent/schwab_token.json
# Leave blank to disable Schwab collection
SCHWAB_ENABLED=true

# --- Robinhood ---
ROBINHOOD_USERNAME=
ROBINHOOD_PASSWORD=
# TOTP secret from Robinhood two-factor setup (base32 string)
# Leave blank if you don't use TOTP (you'll get prompted interactively instead)
ROBINHOOD_TOTP_SECRET=
# Leave blank to disable Robinhood collection
ROBINHOOD_ENABLED=true

# --- Plaid ---
PLAID_CLIENT_ID=
PLAID_SECRET=
# Environment: sandbox, development, or production
PLAID_ENV=production

# Add one PLAID_ACCESS_TOKEN_n per linked institution (generated by plaid_setup.py)
# Example:
# PLAID_ACCESS_TOKEN_1=access-production-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# PLAID_ACCESS_TOKEN_2=access-production-yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy
